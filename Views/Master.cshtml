@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
	Layout = null;
}

@* the fun starts here *@

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title>Nata Websida</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="/css/Contact-Form-Clean.css">
    <link rel="stylesheet" href="/css/Footer-Basic.css">
    <link rel="stylesheet" href="/css/Navigation-with-Button.css">
    <link rel="stylesheet" href="/css/mainStyles.css">
    <link rel="stylesheet" href="/css/Team-Boxed.css">
</head>

<body>
    <div class="container">
        <!-- Start: NavbarRow -->
        <div class="row">
            <div class="col">
                <div class="container">
                    <!-- Start: Navigation with Button -->
                    <nav class="navbar navbar-light navbar-expand-md navigation-clean-button">
                        <a class="navbar-brand" style="color:#009999" href="/">Nata Websida</a><button data-bs-toggle="collapse" class="navbar-toggler" data-bs-target="#navcol-1"><span class="visually-hidden">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                        <div class="collapse navbar-collapse" id="navcol-1">
                            <ul class="navbar-nav me-auto">
                                <li class="nav-item dropdown">
                                    <a class="dropdown-toggle nav-link" aria-expanded="false" data-bs-toggle="dropdown" href="#">Articles</a>
                                    <div class="dropdown-menu">
                                        @{
                                            var selection = Umbraco.Content(Guid.Parse("1fa70c57-ea13-4f94-b61d-a2f2d72957a3"))
                                            .Children()
                                            .Where(x => x.IsVisible())
                                            .OrderBy(x => x.Name);
                                        }
                                        @foreach (var item in selection)
                                        {
                                            <a class="dropdown-item" href="@item.Url()">@item.Name()</a>
                                        }
                                    </div>
                                </li>

                             <li class="nav-item">
                                    <a class="nav-link" href="@Umbraco.Content("6f9abf35-a572-464a-99af-7062b2a38c7c").Url()">Our Crew</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Umbraco.Content("7f82dc76-aee4-4d81-8373-7b2d38a81e52").Url()">Contact Us</a>
                                </li>   
                            </ul>
                            <span class="navbar-text actions">
                                  @Html.Partial("LoginStatusPartView")
                            </span>
                        </div>
                    </nav><!-- End: Navigation with Button -->
                </div>
            </div>
        </div><!-- End: NavbarRow -->
        
        
        <!-- Start: MainRow -->
        <div class="row">
            <!-- Start: MainContent -->
            <div class="col ">
                @RenderBody()
            </div><!-- End: MainContent -->
            <!-- Start: RandomArticles -->
            <div class="col-xxl-4">
                @{
                    var randomArticles = Umbraco.Content(1058)
                    .Descendants()
                    .Where(x => x.IsVisible() &&
                    (x.IsDocumentType("gossipArticle") ||
                    x.IsDocumentType("newsArticle") ||
                    x.IsDocumentType("reviewArticle")))
                    .OrderBy(t => Guid.NewGuid()).Take(3);
                }

                @foreach (var article in randomArticles)
                {
                <a   href="@article.Url()">
                    <div class="articleTeaser">
                        <div>
                            <h3>@article.Value("teaserTitle")</h3>
                        </div>
                        <div>
                            @{
                                var image = article.Value<IPublishedContent>("teaserImage");
                            }
                              <img src="@image.Url()" class="img-fluid"/>  
                        </div>
                    </div>
                </a>
                }
            </div><!-- End: RandomArticles -->
        </div><!-- End: MainRow -->
        
        
        <!-- Start: FooterRow -->
        <div class="row">
            <div class="col">
                <!-- Start: Footer Basic -->
                <footer class="footer-basic">
                    <!-- Start: Social Icons -->
                    <div class="social">
                        <a href="#"><i class="icon ion-social-instagram"></i></a>
                        <a href="#"><i class="icon ion-social-snapchat"></i></a>
                        <a href="#"><i class="icon ion-social-twitter"></i></a>
                        <a href="#"><i class="icon ion-social-facebook"></i></a>
                    </div><!-- End: Social Icons -->
                    <!-- Start: Links -->
                    <ul class="list-inline">
                        <li class="list-inline-item"><a href="#">Home</a></li>
                        <li class="list-inline-item"><a href="#">Services</a></li>
                        <li class="list-inline-item"><a href="#">About</a></li>
                        <li class="list-inline-item"><a href="#">Terms</a></li>
                        <li class="list-inline-item"><a href="#">Privacy Policy</a></li>
                    </ul><!-- End: Links -->
                    <!-- Start: Copyright -->
                    <p class="copyright">Nata websida © 2021</p><!-- End: Copyright -->
                </footer><!-- End: Footer Basic -->
            </div>
        </div><!-- End: FooterRow -->
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>